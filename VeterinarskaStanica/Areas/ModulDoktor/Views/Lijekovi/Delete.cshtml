@model VeterinarskaStanica.Areas.ModulDoktor.Models.Lijek

<h2>Brisanje</h2>
<form asp-area="ModulDoktor" asp-controller="Lijekovi" asp-action="Obrisi" data-ajax="true" data-ajax-method="post" data-ajax-update="#ajaxpoziv">
        @if (TempData["Message"] != null)
        {
            <div>
                <h3>@TempData["Message"]</h3>
            </div>
        }
        @Html.AntiForgeryToken()


        <div>
            <h4>Lijekovi</h4>
            <hr />
            <div class="form-group">

                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Id, Model.listaLijekova.Select(model => new SelectListItem
               {
                   Value = model.Id.ToString(),
                   Text = model.Naziv
               }).ToList(), null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Obriši" class="btn btn-default" />

            </div>
        </div>
    </form>