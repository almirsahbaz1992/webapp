@model VeterinarskaStanica.Areas.ModulTehnickoOsoblje.Models.Racun

<h2>Brisanje</h2>
<form asp-area="ModulTehnickoOsoblje" asp-controller="Racun" asp-action="Obrisi" data-ajax="true" data-ajax-method="post" data-ajax-update="#ajaxpoziv">
        @if (TempData["Message"] != null)
        {
            <div>
                <h3>@TempData["Message"]</h3>
            </div>
        }
        @Html.AntiForgeryToken()


        <div>
            <h4>Računi</h4>
            <hr />
            <div class="form-group">

                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Id, Model.listaRacuna.Select(model => new SelectListItem
               {
                   Value = model.Id.ToString(),
                   Text = model.Naziv
               }).ToList(), null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Obriši" class="btn btn-default" />

            </div>
        </div>
</form>