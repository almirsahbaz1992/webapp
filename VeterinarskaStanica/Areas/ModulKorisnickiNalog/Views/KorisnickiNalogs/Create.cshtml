@model VeterinarskaStanica.Areas.ModulKorisnickiNalog.Models.NaloziEditVM

<form asp-area="ModulKorisnickiNalog" asp-controller="KorisnickiNalogs" asp-action="Create" data-ajax="true" data-ajax-method="post" data-ajax-update="#ajaxpozivNalozi">
    @if (TempData["Message"] != null)
    {
        <div>
            <h3>@TempData["Message"]</h3>
        </div>
    }
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Korisnički nalog</h4>
        <hr />


        <div align="center">
            @Html.LabelFor(model => model.Username, "Korisničko ime", htmlAttributes: new { @class = "control-label col-md-8" })
            <div align="right">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        </br>
		<div align="center">
			@Html.LabelFor(model => model.Password, "Lozinka", htmlAttributes: new { @class = "control-label col-md-7" })
			<div align="right">
				@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
			</div>
		</div>

        </br>

        <div class="form-group">
            @Html.LabelFor(model => model.doc, "Doktor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <div style="padding-left:20px ">
                        @Html.EditorFor(model => model.doc)
                    </div>
                    @Html.ValidationMessageFor(model => model.doc, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.teh_osob, "Tehničko osoblje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <div style="padding-left:20px ">
                        @Html.EditorFor(model => model.teh_osob)
                    </div>
                    @Html.ValidationMessageFor(model => model.teh_osob, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admin, "Administrator", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <div style="padding-left:20px ">
                        @Html.EditorFor(model => model.admin)
                    </div>
                    @Html.ValidationMessageFor(model => model.admin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spasi" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>